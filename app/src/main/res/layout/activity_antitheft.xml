<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView 
        android:text="手机防盗"
		style="@style/TitleStyle"
        />  

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp">
	    <TextView 
	        android:text="安全号码"
	        android:textSize="18sp"
	        android:textColor="#000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_safe_num"
			android:text="安全号码"
			android:textSize="18sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        />
	    <ImageView 
	        android:layout_marginTop="2dp"
	        android:layout_below="@id/tv_safe_num"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:background="@drawable/listview_divider"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp">
	    <TextView 
	        android:text="防盗保护是否开启"
	        android:textSize="18sp"
	        android:textColor="#000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        />
	    
	    <ImageView 
	        android:id="@+id/iv_open_safe"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/lock"
	        android:layout_alignParentRight="true"
	        />
	    <ImageView 
	        android:layout_marginTop="2dp"
	        android:layout_below="@id/iv_open_safe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:background="@drawable/listview_divider"
	        />
	</RelativeLayout>
	<TextView 
	    android:id="@+id/tv_reset"
	    android:text="重新进入设置向导"
	    android:padding="3dp"
	    android:textSize="18sp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/selector_reset_bg"
	    />
	<TextView 
	    android:padding="8dp"
	    android:text="功能简介"
	    android:textSize="18sp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#cccccc"
	    />
	
	<TextView 
		android:text="GPS追踪：#*location*#"
		android:textColor="#000"
		android:textSize="18sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:drawableLeft="@android:drawable/star_big_on"
		android:padding="5dp"
	    />
	<TextView 
		android:text="播放报警音乐：#*alarm*#"
		android:textColor="#000"
		android:textSize="18sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:drawableLeft="@android:drawable/star_big_on"
		android:padding="5dp"
	    />
	<TextView 
		android:text="远程删除数据：#*wipedata*#"
		android:textColor="#000"
		android:textSize="18sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:drawableLeft="@android:drawable/star_big_on"
		android:padding="5dp"
	    />
	<TextView 
		android:text="远程锁屏：#*lockscreen*#"
		android:textColor="#000"
		android:textSize="18sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:drawableLeft="@android:drawable/star_big_on"
		android:padding="5dp"
	    />
	
</LinearLayout>

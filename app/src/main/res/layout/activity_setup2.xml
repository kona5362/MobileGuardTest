<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:text="2.手机卡绑定"
		style="@style/TitleStyle"
        />
	<TextView 
	    android:text="通过绑定sim卡：\n下次重启手机，发现sim卡变化\n就会发送报警短信"
	    android:textSize="18dp"
	    android:textColor="#000"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    />
	
	<com.test.mobileguardtest.view.SettingItemView
	    xmlns:mobilesafe="http://schemas.android.com/apk/res/com.test.mobileguardtest"
        android:id="@+id/siv_bound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:destitle="点击绑定sim卡"
        mobilesafe:desoff="sim卡未绑定"
        mobilesafe:deson="sim卡已绑定"
	    />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    >
	    <ImageView 
		    android:background="@android:drawable/presence_invisible"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <ImageView 
		    android:background="@android:drawable/presence_online"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <ImageView 
		    android:background="@android:drawable/presence_invisible"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <ImageView 
		    android:background="@android:drawable/presence_invisible"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bind"
	        android:layout_centerInParent="true"
	        />
	    <Button 
			style="@style/PrePage"
	    />
	    <Button 
			style="@style/NextPage"
	    />
	</RelativeLayout>
	
</LinearLayout>
